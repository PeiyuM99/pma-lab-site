---
import { SITE_TITLE, SITE_VERSION } from '../consts';
import HeaderLink from './HeaderLink.astro';

const rawBase = import.meta.env.BASE_URL;
const base = rawBase.endsWith('/') ? rawBase : `${rawBase}/`;
const v = `?v=${SITE_VERSION}`;
---

<header>
  <nav>
    <h2><a href={`${base}${v}`}>{SITE_TITLE}</a></h2>
    <div class="internal-links">
      <HeaderLink href={`${base}${v}`}>Home</HeaderLink>
      <HeaderLink href={`${base}people/${v}`}>People</HeaderLink>
      <HeaderLink href={`${base}publications/${v}`}>Publications</HeaderLink>
      <HeaderLink href={`${base}projects/${v}`}>Projects</HeaderLink>
      <HeaderLink href={`${base}news/${v}`}>News</HeaderLink>
      <HeaderLink href={`${base}join-us/${v}`}>Join Us</HeaderLink>
    </div>
  </nav>
</header>

<style>
  header {
    margin: 0;
    padding: 0 1em;
    background: white;
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
  }
  h2 {
    margin: 0;
    font-size: 1em;
  }
  h2 a,
  h2 a.active {
    text-decoration: none;
  }
  nav {
    display: flex;
    gap: 1rem;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
  }
  nav a {
    padding: 1em 0.5em;
    color: var(--black);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  nav a.active {
    text-decoration: none;
    border-bottom-color: var(--accent);
  }
  .internal-links {
    display: flex;
    flex-wrap: wrap;
  }
</style>
